# PostgreSQL connection string for Prisma/API.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app
# HTTP port for the API server.
PORT=3000
# Telegram bot token from BotFather.
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Public base URL for Telegram webhook mode.
TELEGRAM_BOT_WEBHOOK_BASE_URL=https://example.ru
# Base URL used by bot/internal API calls.
API_BASE_URL=http://localhost:3000
# WebSocket endpoint for local log streaming.
WS_LOG_URL=ws://localhost:8787
